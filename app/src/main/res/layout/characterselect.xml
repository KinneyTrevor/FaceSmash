<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#00BCD4">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon1"
        android:layout_marginTop="71dp"
        android:minHeight="150px"
        android:minWidth="150px"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/icon2"
        android:src="@mipmap/icon1"
        android:maxHeight="150px"
        android:maxWidth="150px"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon2"
        android:minHeight="150px"
        android:minWidth="150px"
        android:layout_alignTop="@+id/icon1"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon2"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon4"
        android:src="@mipmap/icon4"
        android:background="@android:color/transparent"
        android:layout_below="@+id/icon1"
        android:layout_toLeftOf="@+id/icon2"
        android:layout_toStartOf="@+id/icon2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon5"
        android:src="@mipmap/icon4"
        android:layout_below="@+id/icon2"
        android:layout_alignLeft="@+id/icon2"
        android:layout_alignStart="@+id/icon2"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon3"
        android:src="@mipmap/icon5"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/icon2"
        android:layout_toRightOf="@+id/icon2"
        android:layout_toEndOf="@+id/icon2" />

</RelativeLayout>